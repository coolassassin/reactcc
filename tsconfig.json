{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "isolatedModules": false,
    "baseUrl": "./"
  },
  "include": [
    "index.ts",
    "src"
  ],
  "exclude": ["node_modules"]
}
